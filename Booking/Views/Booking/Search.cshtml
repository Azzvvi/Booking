@model List<Booking.Models.ViewModels.EntityModel>


@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Searching results:</h1>
<br/>

<div class="container">
    <div class="row">
        <p>
            @foreach (var item in Model)
            {
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column card-columns align-items-start">
                        <h3 class="mb-0"><strong>Hotel name: @item.hotel_name</strong></h3>
                        <div class="mb-1 text-muted">Price: @item.price</div>
                        <p class="card-text mb-auto">Seats: @item.seats</p>
                    </div>
                </div>
            }
        </p>
    </div>
</div>